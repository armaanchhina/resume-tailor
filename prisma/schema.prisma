generator client {
  provider = "prisma-client-js"
  binaryTargets   = ["native", "linux-musl-arm64-openssl-3.0.x"]

}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")

}

model User {
  id           String   @id @default(cuid())
  name         String?
  email        String   @unique
  passwordHash String   // credentials auth
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  resumes      Resume[]
  sessions     Session[]

}

model Session {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model Resume {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String   @unique
  fullName      String
  email         String
  phone         String?
  linkedin      String?
  github        String?
  portfolio     String?
  summary       String?
  workJson      Json
  educationJson Json
  technicalSkillsJson Json? 
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}